<h1>New Article</h1>

<!-- note :article can be other name, e.g. :art -->
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %>
    <%= f.text_field :text %>
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>

<%= link_to "Back", articles_path %>
