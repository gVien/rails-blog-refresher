<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<h2>Comments</h2>
<% @article.comments.each_with_index do |comment, index| %>
  <% if index.even? %>
    <div class="even-comment">
      <!-- this renders the partial inside the comments folder -->
      <%= render comment %>
    </div>
  <% else %>
    <div class="odd-comment">
      <!-- render partial can also be used -->
      <%= render partial: comment %>
    </div>
  <% end %>
<% end %>

<%= form_for ([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Post" %>
  </p>
<% end %>

